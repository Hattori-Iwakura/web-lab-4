@* filepath: Areas/Admin/Views/Product/Add.cshtml *@
@model web_lab_4.Models.Product

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <i class="fas fa-plus"></i> Add New Product
    </h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Products
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
            </div>
            <div class="card-body">
                <form asp-action="Add" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <!-- Basic Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">Select Category</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Brand" class="control-label"></label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Weight and Flavor -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Weight" class="control-label"></label>
                                <input asp-for="Weight" class="form-control" step="0.001" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="WeightUnit" class="control-label">Weight Unit</label>
                                <select asp-for="WeightUnit" class="form-control" asp-items="ViewBag.WeightUnits">
                                </select>
                                <span asp-validation-for="WeightUnit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Flavor" class="control-label"></label>
                                <input asp-for="Flavor" class="form-control" />
                                <span asp-validation-for="Flavor" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Stock and Expiry -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="StockQuantity" class="control-label">Stock Quantity</label>
                                <input asp-for="StockQuantity" class="form-control" min="0" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ExpiryDate" class="control-label">Expiry Date</label>
                                <input asp-for="ExpiryDate" class="form-control" type="date" />
                                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Ingredients -->
                    <div class="form-group">
                        <label asp-for="Ingredients" class="control-label"></label>
                        <textarea asp-for="Ingredients" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Ingredients" class="text-danger"></span>
                    </div>

                    <!-- Nutritional Info -->
                    <div class="form-group">
                        <label asp-for="NutritionalInfo" class="control-label">Nutritional Information</label>
                        <textarea asp-for="NutritionalInfo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="NutritionalInfo" class="text-danger"></span>
                    </div>

                    <!-- Usage Instructions -->
                    <div class="form-group">
                        <label asp-for="UsageInstructions" class="control-label">Usage Instructions</label>
                        <textarea asp-for="UsageInstructions" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="UsageInstructions" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group">
                        <label for="imageUrl" class="control-label">Product Image</label>
                        <input type="file" name="imageUrl" class="form-control-file" accept="image/*" />
                    </div>

                    <!-- Availability -->
                    <div class="form-check">
                        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                        <label asp-for="IsAvailable" class="form-check-label">
                            Available for sale
                        </label>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Add Product" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Quick Info Panel -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Guidelines</h6>
            </div>
            <div class="card-body">
                <h6>Product Information Tips:</h6>
                <ul class="small">
                    <li>Use clear, descriptive product names</li>
                    <li>Include accurate weight and measurements</li>
                    <li>Add detailed nutritional information</li>
                    <li>Specify clear usage instructions</li>
                    <li>Set appropriate expiry dates</li>
                </ul>
                
                <h6 class="mt-3">Image Requirements:</h6>
                <ul class="small">
                    <li>Recommended size: 800x600px</li>
                    <li>Format: JPG, PNG, WebP</li>
                    <li>Max file size: 5MB</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
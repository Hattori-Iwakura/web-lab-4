@* filepath: Areas/Admin/Views/Product/Delete.cshtml *@
@model web_lab_4.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 text-danger">
        <i class="fas fa-trash"></i> Delete Product
    </h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-left-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-exclamation-triangle"></i> Confirm Product Deletion
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="fas fa-exclamation-triangle"></i> Warning!</h5>
                    <p class="mb-0">You are about to permanently delete this product. This action cannot be undone and will remove all associated data.</p>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 200px;">
                                <div class="text-center">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                    <p class="text-muted mt-2 mb-0">No Image</p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h4 class="text-dark">@Model.Name</h4>
                        <p class="text-muted">Product ID: #@Model.Id</p>
                        
                        <div class="row">
                            <div class="col-sm-6">
                                <p><strong>Price:</strong> <span class="text-success">@Model.Price.ToString("C")</span></p>
                                <p><strong>Category:</strong> 
                                    @if (Model.Category != null)
                                    {
                                        <span class="badge bg-primary">@Model.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">No Category</span>
                                    }
                                </p>
                            </div>
                            <div class="col-sm-6">
                                <p><strong>Status:</strong> <span class="badge bg-success">Active</span></p>
                                <p><strong>Created:</strong> @DateTime.Now.ToString("MMM dd, yyyy")</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="mt-3">
                                <strong>Description:</strong>
                                <p class="text-gray-700">@Model.Description</p>
                            </div>
                        }
                    </div>
                </div>

                <hr>

                <div class="bg-light p-3 rounded">
                    <h6 class="text-danger"><i class="fas fa-info-circle"></i> What will be deleted:</h6>
                    <ul class="mb-0">
                        <li>All product information and details</li>
                        <li>Product images and media files</li>
                        <li>Product analytics and statistics</li>
                        <li>Any associated reviews or ratings</li>
                    </ul>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <div>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Products
                        </a>
                        <a asp-action="Display" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                    <div>
                        <form asp-action="DeleteConfirmed" method="post" style="display: inline;" 
                              onsubmit="return confirm('Are you absolutely sure you want to delete this product? This action cannot be undone.')">
                            <input asp-for="Id" type="hidden" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Yes, Delete Product
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-left-danger {
        border-left: 0.25rem solid #e74a3b !important;
    }
</style>
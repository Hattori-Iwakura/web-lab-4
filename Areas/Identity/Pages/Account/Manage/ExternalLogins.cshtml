@page
@using web_lab_4.Areas.Identity.Pages.Account.Manage
@model ExternalLoginsModel
@{
    ViewData["Title"] = "External Logins";
    ViewData["PageIcon"] = "fas fa-link";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Info Alert -->
        <div class="alert alert-info">
            <div class="d-flex align-items-start">
                <i class="fas fa-info-circle fa-2x me-3 mt-1"></i>
                <div>
                    <h6 class="mb-2">External Login Providers</h6>
                    <p class="mb-0">
                        Connect your FitSup account with external providers for faster and more convenient sign-in. 
                        You can add or remove these connections at any time.
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Connected Accounts -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="fas fa-check-circle me-2"></i>Connected Accounts
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.CurrentLogins?.Count > 0)
                        {
                            <div class="connected-logins">
                                @foreach (var login in Model.CurrentLogins)
                                {
                                    <div class="login-item d-flex justify-content-between align-items-center mb-3 p-3 bg-light rounded">
                                        <div class="d-flex align-items-center">
                                            <i class="fab fa-@login.LoginProvider.ToLower() fa-2x me-3 text-primary"></i>
                                            <div>
                                                <h6 class="mb-0">@login.ProviderDisplayName</h6>
                                                <small class="text-muted">Connected Account</small>
                                            </div>
                                        </div>
                                        @if (Model.ShowRemoveButton)
                                        {
                                            <form asp-page-handler="RemoveLogin" method="post" class="remove-login-form">
                                                <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                                <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                                        title="Remove this @login.ProviderDisplayName login">
                                                    <i class="fas fa-unlink me-1"></i>Remove
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Required</span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-unlink fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No Connected Accounts</h6>
                                <p class="text-muted small">Connect external accounts for easier sign-in</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Available Providers -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0">
                            <i class="fas fa-plus-circle me-2"></i>Available Providers
                        </h6>
                    </div>
                    <div class="card-body">
                        @if (Model.OtherLogins?.Count > 0)
                        {
                            <p class="text-muted mb-3">Connect additional login providers to your account:</p>
                            <form asp-page-handler="LinkLogin" method="post">
                                <div class="d-grid gap-3">
                                    @foreach (var provider in Model.OtherLogins)
                                    {
                                        <button type="submit" class="btn btn-outline-primary provider-btn" 
                                                name="provider" value="@provider.Name" 
                                                title="Connect your @provider.DisplayName account">
                                            <i class="fab fa-@provider.Name.ToLower() fa-lg me-2"></i>
                                            Connect @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-check-double fa-3x text-success mb-3"></i>
                                <h6 class="text-success">All Providers Connected</h6>
                                <p class="text-muted small">You have connected all available login providers</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Security Information -->
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-shield-alt me-2"></i>Security & Privacy Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-lock fa-3x text-success mb-3"></i>
                            <h6>Secure Connection</h6>
                            <p class="small text-muted">
                                All external connections use secure OAuth protocols to protect your data.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-eye-slash fa-3x text-info mb-3"></i>
                            <h6>Limited Access</h6>
                            <p class="small text-muted">
                                We only access basic profile information required for authentication.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="text-center">
                            <i class="fas fa-times-circle fa-3x text-danger mb-3"></i>
                            <h6>Easy Removal</h6>
                            <p class="small text-muted">
                                You can disconnect any external provider at any time without losing access.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Important Notes -->
                <div class="mt-4 p-3 bg-light rounded">
                    <h6><i class="fas fa-exclamation-triangle text-warning me-2"></i>Important Notes:</h6>
                    <ul class="mb-0 small">
                        <li>Ensure you have at least one way to access your account (password or external login)</li>
                        <li>External providers may have their own privacy policies and security measures</li>
                        <li>Changes to external logins take effect immediately</li>
                        <li>Contact support if you experience any issues with external login connections</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Remove login confirmation
            $('.remove-login-form').on('submit', function(e) {
                const providerName = $(this).find('input[name="LoginProvider"]').val();
                const confirmed = confirm(`Are you sure you want to remove the ${providerName} login from your account?`);
                
                if (!confirmed) {
                    e.preventDefault();
                } else {
                    const submitBtn = $(this).find('button[type="submit"]');
                    const originalText = submitBtn.html();
                    
                    submitBtn.prop('disabled', true)
                             .html('<i class="fas fa-spinner fa-spin me-1"></i>Removing...');
                }
            });

            // Provider button loading state
            $('.provider-btn').on('click', function() {
                const originalText = $(this).html();
                $(this).prop('disabled', true)
                       .html('<i class="fas fa-spinner fa-spin me-2"></i>Connecting...');
            });

            // Animate login items
            $('.login-item').each(function(index) {
                $(this).css('opacity', '0').delay(index * 100).animate({ opacity: 1 }, 500);
            });
        });
    </script>
}

@section Styles {
    <style>
        .login-item {
            border: 1px solid #dee2e6;
            transition: all 0.3s ease;
        }

        .login-item:hover {
            border-color: #0d6efd;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .provider-btn {
            transition: all 0.3s ease;
        }

        .provider-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .card {
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .alert {
            border-radius: 10px;
        }

        .fab {
            width: 1.5rem;
            text-align: center;
        }
    </style>
}

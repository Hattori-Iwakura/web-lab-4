@page
@using web_lab_4.Areas.Identity.Pages.Account.Manage
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row">
        <!-- Sidebar Navigation -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-user-cog me-2"></i>Account Management
                    </h6>
                </div>
                <div class="card-body p-0">
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="fas fa-user-shield text-primary me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Warning Alert -->
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Important Privacy Information:</strong> Your personal data includes all information you've provided to FitSup. You can download or delete this data at any time.
                    </div>

                    <div class="row">
                        <!-- Data Overview -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-database me-2"></i>Your Data Overview
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span><i class="fas fa-user me-2 text-primary"></i>Account Information</span>
                                        <span class="badge bg-primary">Basic</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span><i class="fas fa-envelope me-2 text-info"></i>Email & Communications</span>
                                        <span class="badge bg-info">Contact</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <span><i class="fas fa-shopping-cart me-2 text-success"></i>Order History</span>
                                        <span class="badge bg-success">Transaction</span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span><i class="fas fa-star me-2 text-warning"></i>Reviews & Ratings</span>
                                        <span class="badge bg-warning">Content</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-tools me-2"></i>Data Management Actions
                                    </h6>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <!-- Download Data -->
                                    <div class="mb-4">
                                        <div class="d-flex align-items-start">
                                            <i class="fas fa-download fa-2x text-success me-3"></i>
                                            <div class="flex-grow-1">
                                                <h6>Download Your Data</h6>
                                                <p class="text-muted small mb-2">
                                                    Get a copy of all your personal data in a portable format.
                                                </p>
                                                <form asp-page-handler="DownloadPersonalData" method="post">
                                                    <button type="submit" class="btn btn-success btn-sm">
                                                        <i class="fas fa-download me-2"></i>Download Data
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Delete Account -->
                                    <div>
                                        <div class="d-flex align-items-start">
                                            <i class="fas fa-trash-alt fa-2x text-danger me-3"></i>
                                            <div class="flex-grow-1">
                                                <h6>Delete Your Account</h6>
                                                <p class="text-muted small mb-2">
                                                    Permanently delete your account and all associated data.
                                                </p>
                                                <a asp-page="./DeletePersonalData" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt me-2"></i>Delete Account
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Privacy Rights -->
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-balance-scale me-2"></i>Your Privacy Rights
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Access:</strong> View all data we have about you
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Portability:</strong> Download your data
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Correction:</strong> Update your information
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Deletion:</strong> Request data deletion
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Restriction:</strong> Limit data processing
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check text-success me-2"></i>
                                            <strong>Right to Object:</strong> Opt-out of processing
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Download data confirmation
            $('form[asp-page-handler="DownloadPersonalData"]').on('submit', function(e) {
                const confirmed = confirm('This will download all your personal data. Continue?');
                if (!confirmed) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

@section Styles {
    <style>
        .nav-pills .nav-link {
            color: #6c757d;
            border-radius: 0;
            border-bottom: 1px solid #dee2e6;
            padding: 0.75rem 1rem;
        }

        .nav-pills .nav-link:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

        .nav-pills .nav-link i {
            width: 20px;
            text-align: center;
        }

        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
}

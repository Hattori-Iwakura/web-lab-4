@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "alert-danger" : "alert-success";
    var iconClass = Model.StartsWith("Error") ? "fas fa-exclamation-triangle" : "fas fa-check-circle";
    
    <div class="alert @statusMessageClass alert-dismissible fade show" role="alert">
        <i class="@iconClass me-2"></i>
        @Model
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}